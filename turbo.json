{
    "$schema": "https://turborepo.dev/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
